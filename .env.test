#   source .env.test && go test ./test/integration/...

# MongoDB Configuration
export TEST_MONGO_URI="mongodb://localhost:27017"
export TEST_DB_NAME="skeji_test"

# Server Configuration
export TEST_SERVER_PORT="8080"
